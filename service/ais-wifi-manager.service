[Unit]
Description=AIS-WiFi Manager Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/ais-wifi-manager
ExecStart=/usr/bin/python3 /opt/ais-wifi-manager/run.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
